{
  "name": "textmode.synth.js",
  "version": "1.2.0-beta.1",
  "description": "Synth engine for textmode.js",
  "type": "module",
  "types": "./dist/types/index.d.ts",
  "main": "./dist/textmode.synth.umd.js",
  "module": "./dist/textmode.synth.esm.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/textmode.synth.esm.js",
      "require": "./dist/textmode.synth.umd.js"
    }
  },
  "scripts": {
    "dev": "vite --port 5174 --host",
    "build": "vite build && tsc",
    "preview": "vite preview",
    "build:docs": "typedoc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "dev:docs": "typedoc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint:md": "markdownlint-cli2",
    "lint:md:fix": "markdownlint-cli2 --fix",
    "lint:jsdoc": "eslint src --config eslint.config.js",
    "lint": "npm run format:check && npm run lint:md",
    "verify": "npm run format:check && npm run lint:md && npm run build && npm run test:run",
    "typecheck": "tsc --noEmit",
    "size": "size-limit",
    "prepare": "husky"
  },
  "dependencies": {
    "textmode.js": ">=0.9.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/file": "^12.0.0",
    "@types/node": "^24.5.2",
    "@vitest/ui": "^3.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^62.4.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.7.4",
    "size-limit": "^12.0.0",
    "terser": "^5.44.0",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.7.0",
    "typedoc-vitepress-theme": "^1.1.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.1.7",
    "vitest": "^3.1.2"
  },
  "size-limit": [
    {
      "name": "ESM (gzip)",
      "path": "dist/textmode.synth.esm.js",
      "gzip": true,
      "limit": "15 kB"
    },
    {
      "name": "ESM (uncompressed)",
      "path": "dist/textmode.synth.esm.js",
      "brotli": false,
      "limit": "55 kB"
    },
    {
      "name": "UMD (gzip)",
      "path": "dist/textmode.synth.umd.js",
      "gzip": true,
      "limit": "15 kB"
    },
    {
      "name": "UMD (uncompressed)",
      "path": "dist/textmode.synth.umd.js",
      "brotli": false,
      "limit": "45 kB"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/humanbydefinition/textmode.synth.js.git"
  },
  "keywords": [
    "textmode",
    "creative-coding",
    "graphics",
    "ascii-art",
    "live-coding",
    "synthesis"
  ],
  "author": "humanbydefinition",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/humanbydefinition/textmode.synth.js/issues"
  },
  "homepage": "https://code.textmode.art",
  "files": [
    "dist"
  ]
}
